{
  "name": "crucible",
  "version": "0.1.0",
  "description": "God-mode OpenCode setup for production-grade engineering",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm --external @ast-grep/napi && tsc --emitDeclarationOnly && rm -rf dist/templates && mkdir -p dist/templates && cp src/templates/*.md dist/templates/",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@ast-grep/cli": "^0.40.0",
    "@ast-grep/napi": "^0.40.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opencode-ai/plugin": "^1.2.6",
    "@opencode-ai/sdk": "^1.2.6",
    "js-yaml": "^4.1.1",
    "jsonc-parser": "^3.3.1",
    "picomatch": "^4.0.3",
    "vscode-jsonrpc": "^8.2.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/picomatch": "^4.0.2",
    "bun-types": "1.3.6",
    "typescript": "^5.7.3"
  },
  "trustedDependencies": [
    "@ast-grep/cli",
    "@ast-grep/napi"
  ]
}
